<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
    xmlns="http://www.ontimize.com/schema/jdbc"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
    catalog="" schema="${mainschema}" table="TUSER"
    datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>USER_</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>USER_</Column>
    </UpdateKeys>
    <GeneratedKey>USER_</GeneratedKey>
    <Queries>
        <Query id="default">
            <ValidColumns>
                <Column>USER_</Column>
                <Column>PASSWORD</Column>
                <Column>NAME</Column>
                <Column>SURNAME</Column>
                <Column>EMAIL</Column>
                <Column>NIF</Column>
                <Column>USERBLOCKED</Column>
                <Column>LASTPASSWORDUPDATE</Column>
                <Column>FIRSTLOGIN</Column>


            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.TUSER
                    #WHERE#
                ]]>
            </Sentence>
        </Query>    
        <Query id="login">
            <ValidColumns>
                <Column>USER_</Column>
                <Column>EMAIL</Column>
                <Column>PASSWORD</Column>
                <Column>NAME</Column>
                <Column>SURNAME</Column>
            </ValidColumns>
            <Sentence>
                <![CDATA[
                    SELECT 
                        #COLUMNS#
                    FROM                        
                        ${mainschema}.TUSER
                    #WHERE#
                ]]>
            </Sentence>
        </Query>
        <Query id="balance">
            <Sentence>
                <![CDATA[
                with user_balance as
                (
	             select
		            SUM(e.EX_AMOUNT) EX_TOTAL,
		            SUM(i.IN_AMOUNT) IN_TOTAL,
		            e.USER_
	             from expenses e
	             left join incomes i
	                 on e.user_ = i.user_
	             group by e.user_
                 )
                 select (IN_TOTAL - EX_TOTAL) BALANCE, user_
                 from user_balance #WHERE#
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>