<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="GROUPS"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>GR_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>GR_ID</Column>
    </UpdateKeys>
    <GeneratedKey>gr_id</GeneratedKey>
    <Queries>
        <Query id="getGroupsByMember">
            <AmbiguousColumns>
                <AmbiguousColumn name="GR_ID" prefix="g"/>
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.GROUPS g
                    INNER JOIN
                        ${mainschema}.MEMBER_GROUP mg
                    ON
                        g.GR_ID = mg.GR_ID
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
        </Query>
        <Query id="getGroupMembers">
            <AmbiguousColumns>
                <AmbiguousColumn name="GR_ID" prefix="GROUP_DATA" />
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    WITH GROUP_DATA AS (
                        SELECT
                            g.GR_ID,
                            g.GR_NAME,
                            g.GR_CREATION_DATE,
                            t.USER_,
                            mg.MG_IS_ADMIN
                        FROM
                            ${mainschema}.GROUPS g
                        INNER JOIN
                            ${mainschema}.MEMBER_GROUP mg
                        ON
                            g.GR_ID = mg.GR_ID
                        INNER JOIN
                            TUSER t
                        ON
                            t.USER_ = mg.USER_
                    )
                    SELECT
                        #COLUMNS#
                    FROM
                        GROUP_DATA
                    #WHERE#
                ]]>
            </Sentence>
        </Query>
        <Query id="getGroupMembersWithBalance">
            <AmbiguousColumns>
                <AmbiguousColumn name="GR_ID" prefix="g" />
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    WITH MEMBER_COUNT as (
                        SELECT
                            COUNT(user_) QUANTITY
                        FROM
                            MEMBER_GROUP g
                        #WHERE#
                    ),

                    GROUP_MOVEMENTS AS (
                        SELECT
                            g.USER_,
		                    g.MOV_AMOUNT
                        FROM
                            MOVEMENTS g
                        #WHERE#
                    ),

                    GROUP_BALANCE AS (
                        SELECT
                            SUM(MOV_AMOUNT) / (SELECT QUANTITY FROM MEMBER_COUNT mc) MEMBER_BALANCE
                        FROM
                            GROUP_MOVEMENTS gm
                    ),

                    MEMBER_BALANCE AS (
                        SELECT
                            mg.USER_,
                            (SELECT MEMBER_BALANCE FROM GROUP_BALANCE gb) - COALESCE(SUM(gm.MOV_AMOUNT), 0) MEMBER_BALANCE
                        FROM
                            GROUPS g
                        INNER JOIN
                            MEMBER_GROUP mg
                        ON
                            g.GR_ID = mg.GR_ID
                        LEFT JOIN
                            GROUP_MOVEMENTS gm
                        ON
                            mg.USER_ = gm.USER_
                        #WHERE#
                        GROUP BY
                            mg.USER_
                    )

                    SELECT
                        mb.USER_,
                        mb.MEMBER_BALANCE
                    FROM
                        MEMBER_BALANCE mb
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>