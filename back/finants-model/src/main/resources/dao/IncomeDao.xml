<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="INCOMES"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>IN_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>IN_ID</Column>
    </UpdateKeys>
    <GeneratedKey>in_id</GeneratedKey>
    <Queries>
        <Query id="categoriesWithNames">
            <AmbiguousColumns>
                <AmbiguousColumn name="CA_IN_ID" prefix="inco" />
                <AmbiguousColumn name="CA_IN_ID" prefix="cin" />
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM
                        ${mainschema}.INCOMES inco
                    LEFT JOIN
                        ${mainschema}.CATEGORIES_INCOMES cin
                    ON
                        inco.CA_IN_ID = cin.CA_IN_ID
                    #WHERE#
                ]]>
            </Sentence>
        </Query>
        <Query id="totalIncomeDay">
            <Sentence>
                <![CDATA[
					WITH SUM_TABLE AS (
					    SELECT
                            SUM(IN_AMOUNT) SUM_INCOMES,
                            TO_CHAR(IN_DATE, 'YYYY-MM-DD') DATE_SUM_INCOMES,
                            USER_
                        FROM
                            ${mainschema}.INCOMES
                        GROUP BY DATE_SUM_INCOMES, USER_
                        ORDER BY DATE_SUM_INCOMES
                    )
					SELECT #COLUMNS# FROM SUM_TABLE #WHERE# LIMIT 7
                ]]>
            </Sentence>
        </Query>
        <Query id="totalIncomeForCurrentMonth">
            <Sentence>
                <![CDATA[
                WITH TOTAL_INCOMES AS
                (
                SELECT
                SUM(IN_AMOUNT) AS IN_TOTAL_AMOUNT,
                USER_,
                EXTRACT(MONTH FROM IN_DATE) as  IN_MONTH,
                 EXTRACT(YEAR FROM IN_DATE) as IN_YEAR
                FROM
                INCOMES
                GROUP BY
                USER_,
                EXTRACT(MONTH FROM IN_DATE),
                EXTRACT(YEAR FROM IN_DATE)

                )
                SELECT
                   #COLUMNS#
                 FROM
                    TOTAL_INCOMES
                 #WHERE#

        ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>