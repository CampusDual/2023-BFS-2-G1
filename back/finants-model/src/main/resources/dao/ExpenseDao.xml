<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="EXPENSES"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>EX_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>EX_ID</Column>
    </UpdateKeys>
    <GeneratedKey>ex_id</GeneratedKey>
    <Queries>
        <Query id="totalAmountDay">
            <Sentence>
                <![CDATA[
					WITH  SUM_TABLE AS
                        (SELECT
                            SUM(EX_AMOUNT) SUM_AMOUNT,
                           TO_CHAR(EX_DATE, 'YYYY-MM-DD') DATE_SUM_AMOUNT,
                           USER_
                        FROM
                            ${mainschema}.EXPENSES ex
                        GROUP BY DATE_SUM_AMOUNT, USER_
                        ORDER BY DATE_SUM_AMOUNT
                 )
					SELECT #COLUMNS# FROM SUM_TABLE #WHERE# LIMIT 7
					]]>
            </Sentence>
        </Query>
        <Query id="totalExpensesForCurrentMounth">
            <Sentence>
                <![CDATA[
                WITH TOTAL_EXPENSES AS
                (
                SELECT
                SUM(EX_AMOUNT) AS EX_TOTAL_AMOUNT,
                USER_,
                EXTRACT(MONTH FROM EX_DATE) as  EX_MONTH,
                EXTRACT(YEAR FROM EX_DATE) as EX_YEAR
                FROM
                EXPENSES
                GROUP BY
                USER_,
                EXTRACT(MONTH FROM EX_DATE),
                EXTRACT(YEAR FROM EX_DATE)

                )
                SELECT
                   #COLUMNS#
                 FROM
                    TOTAL_EXPENSES
                 #WHERE#

        ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>