<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="EXPENSES"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>EX_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>EX_ID</Column>
    </UpdateKeys>
    <GeneratedKey>ex_id</GeneratedKey>
    <Queries>
        <Query id="totalAmountDay">
            <Sentence>
                <![CDATA[
					WITH  SUM_TABLE AS
                        (SELECT
                            SUM(EX_AMOUNT) suma,
                           TO_CHAR(EX_DATE, 'YYYY-MM-DD') fecha
                        FROM
                            ${mainschema}.EXPENSES ex
                        GROUP BY fecha
                        ORDER BY suma DESC)
					SELECT #COLUMNS# FROM SUM_TABLE #WHERE#
					]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>